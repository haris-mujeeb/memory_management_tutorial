{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cmake --build . && ./bin/memory_management_tutorial"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Debug Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cmake --build ."
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--target",
                "clean"
            ],
            "group": "build"
        }
    ]
}